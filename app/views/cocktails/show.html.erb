<div class="container mt-3">
  <div class="row">
    <div class="col-6">
      <% if !@cocktail.image_url.nil? %>
        <%= image_tag @cocktail.image_url, width: 400 %>
      <% end %>
    </div>
    <div class="col-6 cocktail-infos">
      <h2><%= @cocktail.name %></h2>
      <!-- <div> -->
        <%#= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn-change' %>
      <!-- </div> -->
      <div>
    <%= link_to 'Edit cocktail', edit_cocktail_path(@cocktail), class: 'btn-change' %>
  </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-6">
      <h3>Ingredients & Doses</h3>
      <% @cocktail.doses.each do |dose| %>
        <div class="cocktail-infos-doses">
          <ul>
            <li>
              <%= dose.ingredient.name %> - <%= dose.description %>
              <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure to delete #{dose.ingredient.name}" } do %>
                  <i class="fa fa-trash-o" aria-hidden="true"></i>
            </li>
          </ul>
        <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-6">
      <h5>Add new ingredient</h5>
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h3>Add a Review</h3>
      <%= render "reviews/new", cocktail: @cocktail, dose: @review %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <% @cocktail.reviews.each do |review| %>
        <ul>
          <li>
            <%= review.content%> -
            <% counter = 0 %>
            <% 5.times do %>
              <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
              <% counter += 1 %>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

